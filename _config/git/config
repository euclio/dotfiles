[core]
	editor = vim
	autocrlf = input
	excludesfile = $XDG_CONFIG_HOME/gitignore
[mergetool "fugitive"]
	cmd = gvim -f -c \"Gvdiff\" \"$MERGED\"
[merge]
	tool = fugitive
[branch "master"]
	rebase = true
[branch]
    autosetuprebase = always
[pull]
