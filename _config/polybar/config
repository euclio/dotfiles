[bar/main]
background = #1c1b1a
foreground = #ffffff
font-0 = "Terminus (TTF):size=9:antialias=false"
font-1 = "DejaVu Sans Mono"
font-2 = "Symbola"
bottom = true
module-margin = 1
separator = |
modules-left = xmonad-log
modules-right = network volume cpu memory filesystem date weather

[module/xmonad-log]
type = custom/script
exec = python -u $XDG_CONFIG_HOME/polybar/xmonad-log
tail = true

