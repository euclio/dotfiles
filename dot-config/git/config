# vim: ft=gitconfig

[user]
	email = arussell123@gmail.com
	name = Andy Russell
[push]
	default = simple
[credential]
	helper = cache --timeout=3600 --socket=$XDG_CACHE_HOME/git/credential-cache/socket
[core]
	autocrlf = input
[mergetool "fugitive"]
	cmd = \"$EDITOR\" -f -c \"Gvdiff\" \"$MERGED\"
[merge]
	tool = fugitive
[branch "master"]
	rebase = true
[branch]
    autosetuprebase = always
[pull]
    rebase = true
[alias]
	co = checkout
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	branch-status = for-each-ref --format='%(refname:short) %(upstream:track)' refs/heads
[color]
	ui = auto
[rebase]
	autostash = true
[commit]
	template = ~/.config/git/commit-template
	verbose = true
	gpgsign = true
[help]
    autocorrect = 10
[stash]
	showPatch = true
[includeIf "gitdir:~/work/"]
	path = "~/work/.gitconfig"
[fetch]
	prune = true
[rerere]
	enabled = true
